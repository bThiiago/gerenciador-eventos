{
  "name": "backend_sistema_gerenciador_eventos",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "base": "ts-node -r tsconfig-paths/register",
    "start": "yarn base src/index.ts",
    "dev": "nodemon --watch 'src/' --exec 'yarn base src/index.ts' -e ts",
    "test": "jest --detectOpenHandles",
    "test-coverage": "yarn test --coverage",
    "show-skip-tests": "jest --reporters jest-skipped-reporter",
    "filldb": "yarn base src/database/script/fillDatabase.ts ",
    "dropdb": "yarn base ./node_modules/typeorm/cli.js schema:drop -d ./src/database/connection.ts",
    "createdb": "yarn base ./node_modules/typeorm/cli.js migration:run -d ./src/database/connection.ts",
    "cleardb": "yarn dropdb && yarn createdb",
    "resetdb": "yarn dropdb && yarn createdb && yarn filldb",
    "build": "tsc --project tsconfig.json && tscpaths -p tsconfig.json -s ./src -o ./build",
    "typeorm": "typeorm-ts-node-commonjs -d ./src/database/connection.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-decorators": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/morgan": "^1.9.2",
    "@types/node": "^16.18.32",
    "@types/nodemailer": "^6.4.4",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "babel-jest": "^27.0.2",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^26.6.3",
    "jest-skipped-reporter": "^0.0.5",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.1",
    "bcrypt": "^5.0.1",
    "celebrate": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "inversify": "^5.1.1",
    "inversify-express-utils": "6.3.2",
    "jsonwebtoken": "^8.5.1",
    "node-cpf": "^1.1.1",
    "node-fetch": "^2.6.6",
    "nodemailer": "^6.7.0",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.10",
    "tsc-watch": "^6.0.4",
    "typeorm": "^0.3.16",
    "typescript-transform-paths": "^3.4.6",
    "morgan": "^1.10.0"
  }
}
